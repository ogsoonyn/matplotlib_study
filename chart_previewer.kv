<TextWidget>:
#<Display>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

#        Label: # comment
#            text: "Hello world.1"
#            color: 1,0,1,1 #rgba

        Label:
            id: la01
            text: "Drag & Drop csv-file to this window!"
            color: 0,0,0,1
            canvas.before:
                Color:
                    rgba: 0,1,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size

        Button:
            text: "Show Previous Chart"
            on_press: root.show_previous_chart()
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            CheckBox:
                id: gtype_line
                group: "grp1"
                active: True
                on_press: root._on_clicked()
            Label:
                text: "Line"
                text_size: self.size
                halign: 'left'
                valign: 'center'

            CheckBox:
                id: gtype_ox
                group: "grp1"
                on_press: root._on_clicked()
            Label:
                text: "o / x"
                text_size: self.size
                halign: 'left'
                valign: 'center'

            CheckBox:
                id: gtype_plus
                group: "grp1"
                on_press: root._on_clicked()
            Label:
                text: "+ / x"
                text_size: self.size
                halign: 'left'
                valign: 'center'

            CheckBox:
                id: gtype_period
                group: "grp1"
                on_press: root._on_clicked()
            Label:
                text: "Period"
                text_size: self.size
                halign: 'left'
                valign: 'center'

            CheckBox:
                id: gtype_circle
                group: "grp1"
                on_press: root._on_clicked()
            Label:
                text: "Circle"
                text_size: self.size
                halign: 'left'
                valign: 'center'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            CheckBox:
                id: cb_invert_x
                on_press: root._on_clicked()
            Label:
                text: "Invert X-Axis"
                text_size: self.size
                halign: 'left'
                valign: 'center'

            CheckBox:
                id: cb_invert_y
                active: True
                on_press: root._on_clicked()
            Label:
                text: "Invert Y-Axis"
                text_size: self.size
                halign: 'left'
                valign: 'center'

            CheckBox:
                id: cb_xy_swap
                on_press: root._on_clicked()
            Label:
                text: "X-Y Swap"
                text_size: self.size
                halign: 'left'
                valign: 'center'

            CheckBox:
                id: cb_color_per_stroke
                active: True
                on_press: root._on_clicked()
            Label:
                text: "Colorful mode"
                text_size: self.size
                halign: 'left'
                valign: 'center'

